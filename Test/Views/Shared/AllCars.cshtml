@model Car

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Image" alt="@Model.Name" />
    <h2><a class="btn btn-warning-cta" asp-controller="Cars" asp-action="OnePage" asp-route-id="@Model.Id"><h2>@Model.Name</h2></a></h2>  
    <p>@Model.ShortDescription</p>
    <p>@Model.Price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.Id">Добавить в корзину</a></p>
</div>

